<p class="timer">Time left: <span id="time">90</span> seconds</p>

<script>
let time = 90;
let timer = setInterval(() => {
  time--;
  document.getElementById("time").innerText = time;
  if (time <= 0) clearInterval(timer);
}, 1000);
</script>
